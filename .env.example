# Database
POSTGRES_PASSWORD=your-secure-password-here
# Connection pool settings (tune for high-load scenarios)
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis (required for distributed locking and queue processing)
REDIS_URL=redis://redis:6379

# Security Keys
JWT_SECRET_KEY=your-random-secret-key-here
SESSION_SECRET_KEY=your-random-session-key-here
CHAD_ENCRYPTION_KEY=your-random-encryption-key-here

# Application
# Public URL where CHAD is accessible
# Used for: CSRF validation, webhook URLs, SSO redirects, email links
# Example: https://chad.example.com
APP_URL=https://chad.example.com

# SSO-Only Authentication Mode (optional)
# Set to true to disable local login and require SSO authentication
# When enabled, users must sign in via SSO (configured in GUI â†’ Settings)
# Default: false (both local and SSO login available)
CHAD_SSO_ONLY=false

# Scaling Configuration
# Number of uvicorn workers for the backend API (port 8000)
UVICORN_WORKERS=4
# Number of uvicorn workers for direct log ingestion (port 8001)
LOG_WORKERS=2
# Number of queue worker replicas (production only)
WORKER_REPLICAS=2

# Logging
# Options: debug, info, warning, error
LOG_LEVEL=warning
